{
  "name": "textual-velocity",
  "version": "0.7.0",
  "repository": "https://github.com/viddo/atom-textual-velocity",
  "description": "Your mental notes at your fingertips!",
  "keywords": [
    "note",
    "notetaking",
    "notational velocity",
    "nvalt",
    "search",
    "filter",
    "wiki"
  ],
  "license": "MIT",
  "main": "./lib/main.js",
  "activationCommands": {
    "atom-workspace": "textual-velocity:start-session"
  },
  "engines": {
    "atom": ">=1.6.0 <2.0.0"
  },
  "dependencies": {
    "baconjs": "0.7.85",
    "bplist": "0.0.4",
    "chokidar": "1.0.6",
    "classnames": "2.2.5",
    "fs-plus": "2.9.1",
    "fs-xattr": "0.1.14",
    "lodash.debounce": "4.0.8",
    "moment": "2.14.1",
    "ramda": "0.22.1",
    "react-for-atom": "15.2.1-0",
    "scandal": "2.2.0",
    "sifter": "0.5.1"
  },
  "devDependencies": {
    "@flow-atom/atom": "^1.8.0-rev.0",
    "babel-eslint": "6.1.2",
    "babel-plugin-syntax-flow": "6.13.0",
    "babel-plugin-transform-flow-strip-types": "6.8.0",
    "eslint": "3.3.0",
    "eslint-config-standard": "6.0.0-beta.2",
    "eslint-config-standard-jsx": "2.0.0",
    "eslint-plugin-flowtype": "2.7.0",
    "eslint-plugin-promise": "2.0.1",
    "eslint-plugin-react": "6.1.0",
    "eslint-plugin-standard": "2.0.0",
    "flow-bin": "0.30.0",
    "temp": "0.8.3"
  },
  "configSchema": {
    "path": {
      "description": "Path to folder where to find notes. Can be an absolute path or a relative path to `~/.atom` (defaults to `~/.atom/notes`). You'll need to (re)start the session if you change this path.",
      "type": "string",
      "default": ""
    },
    "sortField": {
      "type": "string",
      "default": "lastUpdatedTime",
      "enum": [
        "title",
        "lastUpdatedTime",
        "createdTime"
      ]
    },
    "sortDirection": {
      "type": "string",
      "default": "desc",
      "enum": [
        "asc",
        "desc"
      ]
    },
    "listHeight": {
      "type": "number",
      "default": 150,
      "minimum": 0
    },
    "rowHeight": {
      "type": "number",
      "default": 20,
      "minimum": 8,
      "maximum": 80
    }
  },
  "scripts": {
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint 'lib/**/*.js' && eslint 'spec/**/*.js'",
    "test": "npm run flow && apm test && npm run lint"
  }
}
